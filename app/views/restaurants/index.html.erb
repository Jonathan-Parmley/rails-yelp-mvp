<h2>Restaurants</h2>
<div class="card">
  <div class="card-body">
    <ul>
      <% @restaurants.each do |restaurant| %>
        <li>
          <%= link_to restaurant.name, restaurant_path(restaurant) %>
            -  <%= restaurant.category %>
        </li>
      <% end %>
    </ul>
    <div>
      <%= link_to "New restaurant", new_restaurant_path %>
    </div>
  </div>
</div>

